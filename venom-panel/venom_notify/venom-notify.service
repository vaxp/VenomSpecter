[Unit]
Description=Venom Notification Daemon - Desktop Notifications Service
Documentation=https://github.com/vaxp/venom-notify
# يجب أن يبدأ مبكراً لاستقبال الإشعارات من التطبيقات الأخرى
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/bin/venom_notify
# خدمة الإشعارات حيوية، يجب إعادة تشغيلها دائماً
Restart=always
RestartSec=1

[Install]
WantedBy=graphical-session.target
