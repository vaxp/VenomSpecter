[Unit]
Description=Venom Power Daemon - Battery & Power Management Service
Documentation=https://github.com/vaxp/venom-power
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/bin/venom_power
# خدمة الطاقة حيوية جداً، يجب إعادة تشغيلها دائماً
Restart=always
RestartSec=1

[Install]
WantedBy=graphical-session.target
